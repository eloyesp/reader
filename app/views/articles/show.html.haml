%p#notice= notice

%p
  %b Channel:
  = @article.channel
%p
  %b Title:
  = @article.title
%p
  %b Link:
  = @article.link
%p
  %b Description:
  = @article.description
%p
  %b Published date:
  = @article.published_date

#comments
  - unless @comments.empty?
    %h2 Comments
    %ul.unstyled
      - @comments.each do |comment|
        %li
          %h3=  comment.title
          %p= comment.comment
          %span= comment.user.first_name
  %h3 Add a new comment
  = semantic_form_for [@article, @comment] do |f|
    = f.input :title
    = f.input :comment, :input_html => { :rows => 10 }
    = f.action :submit

= link_to 'Back', articles_path

