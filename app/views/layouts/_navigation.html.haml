%header.navbar.navbar-fixed-top.navbar-inverse
  %nav.navbar-inner
    .container
      = link_to "Reader", root_path, :class => 'brand'
      = form_tag search_path, method: :get, class: "form-search navbar-search pull-right" do
        .input-append
          = text_field_tag :q, nil, class: 'search-query', placeholder: "search"
          %button.btn(text="submit" type="submit" value="submit")
            %i.icon-search
      - if user_signed_in?
        %ul.nav
          %li
            %p.navbar-text
              = current_user.login
              - if current_user.avatar.url
                = image_tag current_user.avatar.navbar.url, alt: 'avatar', class: 'avatar'
          %li
            = link_to 'Logout', destroy_user_session_path, :method=>'delete'
          %li
            = link_to 'Edit account', edit_user_registration_path
      - else
        %ul.nav
          %li
            = link_to 'Login', new_user_session_path
          %li
            = link_to 'Sign up', new_user_registration_path

